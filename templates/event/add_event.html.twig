<div class="event_form">
    <h2>Добавить новость:</h2>
    {{ form_start(eventForm) }}
    {# <div class="form-input1">
        {{ form_label(eventForm.active) }}
        {{ form_widget(eventForm.active) }}
    </div> #}
    <div class="form_input">
        {{ form_label(eventForm.name, "Заголовок новости") }}
        {{ form_widget(eventForm.name) }}
    </div>
    <div class="form_input">
        {{ form_label(eventForm.content, "Текст новости") }}
        {{ form_widget(eventForm.content) }}
    </div>
    <div class="form_input">
        {{ form_label(eventForm.image, "Выберите изображение") }}
        {{ form_widget(eventForm.image) }}
    </div>
    <div class="form_input">
        {{ form_label(eventForm.category, "Категория") }}
        {{ form_widget(eventForm.category) }}
    </div>
    <button type="submit">Отправить</button>
    {{ form_end(eventForm) }}
</div>